{% block table %}
    {% if items|length > 0 %}
        <table class="table table-striped table-hover">
            <colgroup>
                <col style="width: 120px" />
                <col style="width: 200px" />
                <col />
                <col style="width: 135px" />
            </colgroup>
            <thead>
            <tr>
                <th class="col-md-1">#</th>
                <th class="col-md-3">Created Timestamp</th>
                <th class="col-md-2">Text</th>
                <th class="col-md-6">Actions</th>
            </tr>
            </thead>
            <tbody>
                  {% if filter == 'all' %}
                      {% include 'CatchOfTheDayDevExamBundle:partials/table:all.html.twig' %}
                  {% elseif filter == 'completed' %}
                      {% include 'CatchOfTheDayDevExamBundle:partials/table:completed.html.twig' %}
                  {% else %}

                  {% endif %}
            </tbody>
        </table>
    {% else %}
        <h2>No todos found !</h2>
    {% endif %}
{% endblock %}


